<table class="fields">
  <tr>
    <th><%= sectionable_form.t :linked %></th>
    <td><%= image_browser(sectionable_form, :linked, {:skip_class => true}) %></td>    
  </tr>
  <tr>
    <th><%= sectionable_form.label_with_text :alignment %></th>
    <td>
      <%= sectionable_form.select :alignment, 
            Skyline::Sections::MediaSection::ALIGNMENT.map{|a| [t(a,:scope => [:activerecord, :attributes, :"skyline/sections/media_section", :alignments]),a]}, :class => "full"%></td>
  </tr>
  <tr>
    <th><%= sectionable_form.label_with_text :caption %></th>
    <td><%= sectionable_form.text_field :caption, :class => "full" %></td>
  </tr>
</table>
