<dl class="panel">
  <dt>
    <span class="content">
      <%= t(:actions, :scope => [:media, :files, :edit]) %>
    </span>
  </dt>
  <dd class="last">
    <div class="button">
      <%=link_to_remote button_text(:delete), {
          :url => skyline_media_dir_file_url(@dir,@file),
          :method=> :delete,
          :confirm => 'Weet u zeker dat u dit bestand wilt verwijderen?',
          :href => url_for(:action => "destroy", :id => @file.id) },
          { :class => "button small red" }
      %>
    </div>
  </dd>
</dl>