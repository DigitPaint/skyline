<% if @tags.present? %>
  $("section-<%= params[:guid] %>-tags").replace('<%= escape_javascript render(:partial => "tags", :locals => {:guid => params[:guid], :sectionable => @taggable.new})%>');
<% else %>
  $("section-<%= params[:guid] %>-tags").replace("");
  (new Fx.Scroll("contentEditPanel")).toBottom();
<% end %>