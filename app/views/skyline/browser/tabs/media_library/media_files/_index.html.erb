    <% end %>

    t.addEvent("selectRow",function(row,event){
      event.stop();
      row.addClass("selected");
      $('browser_media_file_type').set("value", row.get("data-file_type"));
      $('browser_media_referable_id').set("value", row.get("data-referable_id"));
